{
  "name": "cown-quantum-social-network",
  "version": "1.1.1",
  "description": "Advanced quantum-secured social network platform with QKD protocols",
  "main": "src/app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "setup-env": "cp .env.example .env",
    "quantum:test": "cd src/quantum && python test_simple_qkd.py",
    "quantum:demo": "cd src/quantum && python demo_advanced_protocols.py",
    "build": "npm run lint && npm test",
    "precommit": "npm run lint && npm run format",
    "docker:build": "docker build -t cown-app .",
    "docker:run": "docker run -p 3000:3000 cown-app"
  },
  "keywords": [
    "quantum",
    "social-network",
    "qkd",
    "cryptography",
    "quantum-key-distribution",
    "bb84",
    "sarg04",
    "e91",
    "quantum-encryption",
    "pennylane",
    "nodejs",
    "express",
    "postgresql",
    "redis"
  ],
  "author": {
    "name": "Nghia HT",
    "email": "nghiaht281003@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kumaruseru/itfun.git"
  },
  "bugs": {
    "url": "https://github.com/kumaruseru/itfun/issues"
  },
  "homepage": "https://github.com/kumaruseru/itfun#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/config/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
